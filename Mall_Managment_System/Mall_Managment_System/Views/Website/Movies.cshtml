@model IEnumerable<Mall_Managment_System.Models.Movies>
@{
	Layout = "/Views/Shared/layouts.cshtml";
}

<!-- Title page -->
<section class="bg-img1 txt-center p-lr-15 p-tb-92 mb-3" style="background-image: url('/web/images/cinema.jpg');">
	<h2 class="ltext-105 cl0 txt-center">
		We Offers To these Movies
	</h2>
</section>


<hr />
<hr />
<hr />
<hr />
<h1 class="text-center fw-bolde">MALL CINEMA</h1>
<div class="container">

	<div class="row text-center p-1">
		@foreach (var item in Model)
		{

			<div class="col-md-4 mb-3 text-center ">
				<hr />
				<hr />
				<hr />

				<div class="project w-100">
					<div class="project__card">
						<a href="" class="project__image"><img src="@Url.Content("~/images/" + item.Image)" style="width:700px" alt=""></a>
						<div class="project__detail">
							<h2 class="project__title"><a href="#">@Html.DisplayFor(modelItem => item.MovieName)</a></h2>
							<small class="project__category"><a asp-action="MovieDetails" asp-route-id="@item.Id">Details</a></small>
						</div>
					</div>
				</div>


			</div>

		}

	</div>
</div>




