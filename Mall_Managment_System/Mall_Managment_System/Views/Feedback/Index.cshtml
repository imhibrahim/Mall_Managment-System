@model IEnumerable<Mall_Managment_System.Models.Feedback>

@{
    ViewData["Title"] = "Index";
}

<div class="container  pt-4 px-4  align-content-center">
    <div class="row g-4">

        <div class="col-sm-12 col-xl-6 w-100">
            <div class="bgcolor rounded h-100 p-4">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="mb-4">All FeedBack</h4>

                    </div>
                 
                </div>

                <table class="table table-hover">
                    <thead class="text-white">
        <tr>
                            <th scope="col">
                @Html.DisplayNameFor(model => model.users)
            </th>
                            <th scope="col">
                @Html.DisplayNameFor(model => model.Environment)
            </th>
                            <th scope="col">
                @Html.DisplayNameFor(model => model.Rating)
            </th>
                            <th scope="col">
                @Html.DisplayNameFor(model => model.Message)
            </th>
                            <th scope="col">
                @Html.DisplayNameFor(model => model.FeedbackDate)
            </th>
                            <th scope="col">Action</th>
        </tr>
    </thead>
                    <tbody class="text-white-50">
@foreach (var item in Model) {
        <tr>
                                <td scope="row">
                @Html.DisplayFor(modelItem => item.users.Email)
            </td>
                                <td scope="row">
                @Html.DisplayFor(modelItem => item.Environment)
            </td>
                                <td scope="row">
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
                                <td scope="row">
                @Html.DisplayFor(modelItem => item.Message)
            </td>
                                <td scope="row">
                @Html.DisplayFor(modelItem => item.FeedbackDate)
            </td>
                                <td scope="row">

                                    <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

            </div>
        </div>
    </div>
</div>