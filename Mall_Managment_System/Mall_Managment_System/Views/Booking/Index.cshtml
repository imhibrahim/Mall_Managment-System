@model IEnumerable<Mall_Managment_System.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<div class="container  pt-4 px-4  align-content-center">
    <div class="row g-4">

        <div class="col-sm-12 col-xl-6 w-100">
            <div class="bgcolor rounded h-100 p-4">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="mb-4">All Bookings</h4>

                    </div>
                  
                </div>

                <table class="table table-hover">
                    <thead class="text-white">
        <tr>
                            <th scope="col">
                @Html.DisplayNameFor(model => model.movies)
            </th>
                            <th scope="col">
                @Html.DisplayNameFor(model => model.users)
            </th>
                            <th scope="col">
                @Html.DisplayNameFor(model => model.Booking_Date)
            </th>
                            <th scope="col">
                @Html.DisplayNameFor(model => model.Number_Tickets)
            </th>
                            <th scope="col">
                                @Html.DisplayNameFor(model => model.Booking_sets)
                            </th>
                            <th scope="col">Actions</th>
        </tr>
    </thead>
                    <tbody class="text-white-50">
@foreach (var item in Model) {
        <tr>
                                <td scope="row">
                @Html.DisplayFor(modelItem => item.movies.Description)
            </td>
                                <td scope="row">
                @Html.DisplayFor(modelItem => item.users.Email)
            </td>
                                <td scope="row">
                @Html.DisplayFor(modelItem => item.Booking_Date)
            </td>
                                <td scope="row">
                @Html.DisplayFor(modelItem => item.Number_Tickets)
            </td>
                                <td scope="row">
                                    @Html.DisplayFor(modelItem => item.Booking_sets)
                                </td>
                                <td scope="row">
                                    <a class="btn btn-outline-info me-2" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                                    <a class="btn btn-outline-danger me-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>