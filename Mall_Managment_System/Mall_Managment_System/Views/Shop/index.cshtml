@model IEnumerable<Mall_Managment_System.Models.Shops>

@{
    ViewData["Title"] = "Index";
}
<div class="container  pt-4 px-4  align-content-center">
    <div class="row g-4">

        <div class="col-sm-12 col-xl-6 w-100">
            <div class="bgcolor rounded h-100 p-4">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="mb-4">All Shops</h4>

                    </div>
                    <div class="col-md-6 text-sm-end"><button class=" btn btn-outline-danger"> <a asp-controller="Shop" asp-action="Addproduct">Add-New</a></button></div>
                </div>
                <table class="table table-hover">
                    <thead class="text-white">
        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Shop Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Image</th>
                            <th scope="col">Actions </th>
        </tr>
    </thead>
                    <tbody class="text-white-50">
                @foreach (var item in Model) {
                        <tr>
                                <td scope="row">@Html.DisplayFor(modelItem => item.ID)</td>
                                <td scope="row">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td scope="row">@Html.DisplayFor(modelItem => item.Description)</td>
                                <td scope="row"><img src="~/images/@Html.DisplayFor(modelItem => item.Image)" style="width:60px;height:60px;" /></td>
                                <td scope="row">
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
            </div>
        </div>
    </div>
</div>