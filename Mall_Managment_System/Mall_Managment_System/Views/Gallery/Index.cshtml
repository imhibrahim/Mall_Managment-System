@model IEnumerable<Mall_Managment_System.Models.Gallary>

@{
    ViewData["Title"] = "Index";
}

<div class="container  pt-4 px-4  align-content-center">
    <div class="row g-4">

        <div class="col-sm-12 col-xl-6 w-100">
            <div class="bgcolor rounded h-100 p-4">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="mb-4">All Gallery</h4>

                    </div>
                    <div class="col-md-6 text-sm-end"><button class=" btn btn-outline-danger"> <a asp-controller="Gallery" asp-action="Addgallery">Add-New</a></button></div>
                </div>

                <table class="table table-hover">
                    <thead class="text-white">
        <tr>
                            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
                            <th scope="col">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
                    <tbody class="text-white-50">
@foreach (var item in Model) {
        <tr>
                                <td scope="row">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                                <td scope="row">
                <img src="~/images/@Html.DisplayFor(modelItem => item.Image)" style="width:70px; height:70px"/>

            </td>
            <td>
                                    <a class="btn btn-outline-info me-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
            </div>
        </div>
    </div>
</div>