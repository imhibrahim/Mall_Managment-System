@model IEnumerable<Mall_Managment_System.Models.Movies>

@{
    ViewData["Title"] = "Index";
}
<div class="container  pt-4 px-4  align-content-center">
    <div class="row g-4">

        <div class="col-sm-12 col-xl-6 w-100">
            <div class="bgcolor rounded h-100 p-4">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="mb-4">All Shops</h4>

                    </div>
                    <div class="col-md-6 text-sm-end"><button class=" btn btn-outline-danger"> <a asp-controller="Movie" asp-action="AddMovie">Add-New</a></button></div>
                </div>
                <table class="table table-hover">
                    <thead class="text-white">
        <tr>
                            <th scope="col">
                #
            </th>
                            <th scope="col">
              Name
            </th>
                            <th scope="col">
               Description
            </th>
                            <th scope="col">
               Image
            </th>
                            <th scope="col">
              Totel Seats
            </th>
                            <th scope="col">
                Available Seats
            </th>
                            <th scope="col">Action</th>
        </tr>
    </thead>
                    <tbody class="text-white-50">
@foreach (var item in Model) {
        <tr>
                                <td scope="row">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
                                <td scope="row">
                    @Html.DisplayFor(modelItem => item.MovieName)
                </td>
                                <td scope="row">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td scope="row">
                    <img src="~/images/@Html.DisplayFor(modelItem => item.Image)" style="width:70px; height:70px" />
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.TotalSeats)
            </td >
            <td scope="row">
                @Html.DisplayFor(modelItem => item.AvailableSeats)
            </td>
                                <td scope="row">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
            </div>
        </div>
    </div>
</div>